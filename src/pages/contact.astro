---
import BaseLayout from '../layouts/BaseLayout.astro';
import Contact from '../components/Contact.astro';
import '../styles/global.css';
---

<BaseLayout title="Contact">
  <section class="mb-12">
    <div class="flex items-center mb-8">
      <h2 class="text-title font-bold mr-4">
        <span class="text-navigation">/</span><span class="text-white">contact</span>
      </h2>
    </div>
    <div class="flex flex-col md:flex-row">
      <div class="flex-1">
        <p class="text-normal text-secondary-text mb-4">
          Feel free to reach out to me through email or Discord. I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
        </p>
      </div>
      <div class="flex-shrink-0 md:ml-6">
        <Contact email="jamieholroyde@gmail.com" discord="your-discord-link" linkedin="https://www.linkedin.com/in/jamieholroyde/" github="https://github.com/JamieHol-ai"/>
      </div>
    </div>
  </section>
</BaseLayout>
