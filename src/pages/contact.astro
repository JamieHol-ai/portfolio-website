---
import BaseLayout from '../layouts/BaseLayout.astro';
import Contact from '../components/Contact.astro';
import '../styles/global.css';
---

<BaseLayout title="Contact">
  <section class="mb-12">
    <div class="flex flex-col md:flex-row items-center mb-8">
      <h2 class="text-title font-bold mr-4">
        <span class="text-navigation">/</span><span class="text-white">contact</span>
      </h2>
    </div>
    <div class="flex flex-col md:flex-row gap-8">
      <div class="flex-1">
        <p class="text-normal text-secondary-text mb-4 text-center md:text-left">
          Feel free to reach out to me. I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
        </p>
      </div>
      <div class="flex-shrink-0 md:w-1/3">
        <Contact />
      </div>
    </div>
  </section>
</BaseLayout>
