---
export interface SkillCategory {
  title: string;
  skills: string[];
}

export interface Props {
  categories: SkillCategory[];
}

const { categories } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {categories.map((category) => (
    <div class="bg-column-bg p-4 rounded-lg shadow-md border border-white">
      <h3 class="text-lg font-semibold text-primary-text mb-2">{category.title}</h3>
      <div class="w-full h-px bg-white mb-3"></div>
      <div class="flex flex-wrap gap-2">
        {category.skills.map((skill) => (
          <span class="bg-secondary-text text-main-bg px-2 py-1 rounded">{skill}</span>
        ))}
      </div>
    </div>
  ))}
</div>
