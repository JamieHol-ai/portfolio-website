---
export interface Props {
  title: string;
  description: string;
  url: string;
  software: string[];
}

const { title, description, url, software } = Astro.props;
---

<div class="small-project-card border border-white rounded-lg overflow-hidden">
  <div class="p-1">
    <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
    {software.length > 0 ? (
      <div class="flex flex-wrap gap-2 text-secondary-text">
        {software.map((item) => (
          <span>{item}</span>
        ))}
      </div>
    ) : (
      <p class="text-secondary-text">No software specified.</p>
    )}
  </div>
  <div class="border-t border-white p-4">
    <div class="mb-4">
      <p class="text-secondary-text">{description}</p>
    </div>
    <div class="text-right">
      <a href={url} class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        View Project
      </a>
    </div>
  </div>
</div>